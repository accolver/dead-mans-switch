# *.tfvars should not be added to git
# Copy this file to terraform.tfvars and fill in the values

# Organization and billing info
folder_id = "870745208278" # LoginLoop
organization_id = "115297153788" # aviat.io
billing_account = "01A677-2C61EB-9BD9E1" # Fixed typo: was "billing_acocunt"

# Cloud Run configuration
cpu_limit = "1000m"
