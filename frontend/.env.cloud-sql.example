# Cloud SQL Configuration Template
# Copy this to .env.local and fill in your actual values

# Database Connection
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# Cloud SQL Instance Details
CLOUD_SQL_CONNECTION_NAME="project-id:region:instance-name"

# For local development with Cloud SQL Proxy
# DATABASE_URL="postgresql://username:password@127.0.0.1:5432/database"

# Application Configuration (keep existing values)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_SUPPORT_EMAIL="support@keyfate.com"
NEXT_PUBLIC_COMPANY="KeyFate"
NEXT_PUBLIC_PARENT_COMPANY="KeyFate Inc."

# Optional: Stripe (if using payment features)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""

# Development/Production Environment
NODE_ENV="development"
