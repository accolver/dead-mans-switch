    "@radix-ui/react-toast": "jsr:@radix-ui/react-toast@^1.1.5",
    "@stripe/stripe-js": "jsr:@stripe/stripe-js@^5.2.0",
    "caniuse-lite": "npm:caniuse-lite@^1.0.30001684",
    "class-variance-authority": "jsr:class-variance-authority@^0.7.1",
    "clsx": "jsr:clsx@^2.1.1",
    "drizzle-orm": "jsr:drizzle-orm@^0.36.4",
    "lucide-react": "jsr:lucide-react@^0.462.0",
    "next": "jsr:next@15.0.3",
    "next-themes": "jsr:next-themes@^0.4.3",
    "pg": "jsr:pg@^8.13.1",
    "react": "jsr:react@18.3.1",
    "react-dom": "jsr:react-dom@18.3.1",
