# Local Development Environment Variables
# Copy this file to .env.local and configure your settings

# Database Configuration
POSTGRES_DB=keyfate_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_change_in_prod
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_HOST_AUTH_METHOD=trust

# Database URL for applications
DATABASE_URL=postgresql://postgres:dev_password_change_in_prod@localhost:5432/keyfate_dev

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@local.dev
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Application Secrets
ENCRYPTION_KEY=generate-an-encryption-key
JWT_SECRET=your-jwt-secret-here-change-in-production

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_ADMIN_EMAIL=admin@localhost
SENDGRID_SENDER_NAME=Dead Man's Switch Local

# Development URLs
NEXT_PUBLIC_SITE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_MONITORING=false
DEBUG_MODE=true

# Development Tools
ENABLE_PGADMIN=false
# NextAuth Configuration
NEXTAUTH_SECRET=your-secure-secret-here-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (optional for local dev)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# App Configuration
NEXT_PUBLIC_COMPANY=KeyFate
NEXT_PUBLIC_PARENT_COMPANY=Aviat, LLC
NEXT_PUBLIC_SUPPORT_EMAIL=support@keyfate.com

# Stripe (optional)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
